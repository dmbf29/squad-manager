<%= simple_form_for [@squad, @player] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :nation %>
  <%= f.input :age %>
  <%= f.input :potential_low %>
  <%= f.input :potential_high %>
  <%= f.input :rating %>
  <div style="display:flex">
    <% Player::FACES.each do |face| %>
      <div style="display:flex;flex-direction: column;">
        <%= image_tag face, style: "margin-right: 5px;width: 100px;
      height: 100px;" %>
        <span><%= face %></span>
      </div>
    <% end %>
  </div>
  <%= f.input :photo %>
  <%= f.input :position_list, as: :check_boxes, collection: Player::POSITIONS %>
  <%= f.input :badge, collection: Player::BADGES %>
  <%= f.input :status, collection: Player.statuses.keys %>
  <%= f.association :squad_place, collection: @squad.squad_places  %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
