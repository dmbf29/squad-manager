<%= simple_form_for [@squad, @player] do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :nation %>
  <%= f.input :age %>
  <%= f.input :potential_low %>
  <%= f.input :potential_high %>
  <%= f.input :rating %>
  <%= f.input :badge, collection: Player::BADGES %>
  <%= f.input :status, collection: Player.statuses.keys %>
  <%= f.association :squad_place, collection: @squad.squad_places  %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
