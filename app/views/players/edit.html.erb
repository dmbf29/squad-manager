<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3" style="margin-bottom: 50px">
      <div style="display: flex;justify-content: space-between;align-items: baseline;">
        <h1>Update Player</h1>
        <%= link_to player_path(@player), method: :delete,
          data: { confirm: "Remove player from squad?" } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>
