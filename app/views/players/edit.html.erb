<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1" style="margin-bottom: 50px">
      <div style="display: flex;justify-content: space-between;align-items: baseline;">
        <div style="display: flex">
          <%= image_tag @player.avatar.photo, class: "navbar-wagon avatar", style: "background-color: transparent; box-shadow:none; margin-top:10px;" %>
          <h1>
            <%= @player.first_name %> <%= @player.last_name %>
          </h1>
        </div>
        <%= link_to player_path(@player), method: :delete,
          data: { confirm: "Remove player from squad?" } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>
