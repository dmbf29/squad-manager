function refreshForm(innerHTML) {
  const newReviewForm = document.getElementById('new_review');
  newReviewForm.innerHTML = innerHTML;
}

function addPlayer(reviewHTML) {
  const squadPlaces = document.getElementById('squad-place-card-<%= player.squad_place.id %>');
  squadPlaces.innerHTML = reviewHTML;
}

